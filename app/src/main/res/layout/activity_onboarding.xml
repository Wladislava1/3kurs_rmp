<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Кнопка "Пропустить" сверху справа -->
    <TextView
        android:id="@+id/btnSkip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Пропустить"
        android:fontFamily="@font/montserrat_regular"
        android:textStyle="bold"
        android:textColor="@color/purple"
        android:textSize="18sp"
        android:padding="8dp"
        android:background="@null"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"/>

    <!-- Картинка под кнопкой с отступом сверху -->
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/onboardingViewPager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/btnSkip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomLayout"
        android:layout_marginTop="16dp"
        android:contentDescription="Onboarding pages"/>

    <!-- Нижний контейнер: полоски + кнопка "Далее" -->
    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:measureWithLargestChild="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="100dp">

        <!-- Индикатор слайдов (полоски) -->
        <LinearLayout
            android:id="@+id/indicatorLayout"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:orientation="horizontal"
            android:gravity="start"
            android:layout_weight="1"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="16dp"/>

        <!-- Кнопка "Далее" -->
        <Button
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:layout_marginEnd="16dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:paddingEnd="42dp"
            android:paddingStart="42dp"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:text="Далее"/>

        <!-- Кнопка "Поехали" -->
        <Button
            android:id="@+id/btnStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:text="Поехали"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="14sp"
            android:paddingTop="14dp"
            android:paddingEnd="42dp"
            android:paddingStart="42dp"
            android:paddingBottom="14dp"
            android:textColor="@android:color/white"
            android:visibility="gone"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>