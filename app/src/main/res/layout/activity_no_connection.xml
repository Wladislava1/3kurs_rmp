<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Картинка -->
    <LinearLayout
        android:id="@+id/centerContent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/circlenc"/>

        <TextView
            android:id="@+id/errorText"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_regular"
            android:textStyle="bold"
            android:gravity="center"
            android:lineSpacingExtra="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Нет подключения к интернету"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/errorSubText"
            android:fontFamily="@font/montserrat_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="center"
            android:text="Проверьте подключение и повторите попытку"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <!-- Кнопка внизу -->
    <Button
        android:id="@+id/retryButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Повторить попытку"
        android:background="@drawable/button_background"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_regular"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
